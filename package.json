{
    "name": "@nessmcfr/quark-lang",
    "version": "1.0.0",
    "description": "âš› Quark programming language",
    "main": "index.js",
    "scripts": {
        "test": "yarn mocha -r ts-node/register/transpile-only -r tsconfig-paths/register tests/**/*.spec.ts",
        "build": "yarn tsc",
        "start": "node dist/bundle.js",
        "start:watch": "nodemon dist/index.js --exec \"npm run start\"",
        "dev": "yarn ts-node --project tsconfig.json -r tsconfig-paths/register .\\src\\index.ts",
        "dev:watch": "nodemon src/index.ts --exec \"npm run dev\"",
        "lint": "yarn eslint . --ext .ts --fix",
        "bundle": "yarn webpack-cli"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/NessMC/quark-lang.git"
    },
    "keywords": [
        "quark",
        "language",
        "programming"
    ],
    "author": "NessMC",
    "license": "CC0-1.0",
    "bugs": {
        "url": "https://github.com/NessMC/quark-lang/issues"
    },
    "homepage": "https://github.com/NessMC/quark-lang#readme",
    "devDependencies": {
        "@types/expect": "^24.3.0",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.25",
        "@typescript-eslint/eslint-plugin": "^3.7.0",
        "@typescript-eslint/parser": "^3.7.0",
        "eslint": "^7.5.0",
        "eslint-plugin-import": "^2.22.0",
        "ts-loader": "^8.0.2",
        "typescript": "^3.9.7",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12"
    },
    "dependencies": {
        "@types/chai": "^4.2.12",
        "chai": "^4.2.0",
        "dotenv": "^8.2.0",
        "eslint-config-airbnb-typescript": "^9.0.0",
        "husky": "^4.2.5",
        "jsep": "^0.3.5",
        "lint-staged": "^10.2.11",
        "mocha": "^8.0.1",
        "ts-mocha": "^7.0.0",
        "ts-node": "^8.10.2",
        "tsconfig-paths": "^3.9.0"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint",
            "git add ."
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "./node_modules/.bin/lint-staged && npm run test"
        }
    }
}
